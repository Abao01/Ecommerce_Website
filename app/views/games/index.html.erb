<div class="column">
  <div class="card">
    <div class="card-content">
    <% @games.each do |game| %>
      <% if game.image.present? %>
        <p><%= image_tag game.image %></p>
      <% end %>
      <p>Game:<%= game.name %></p>
      <p>Publisher: <%= game.publisher.name %></p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        Price: <br><%= number_to_currency game.price.to_f %>
      </p>
      <p class="card-footer-item">
        Description: <br><%= game.description %>
      </p>
      <p class="card-footer-item">
        Role: <br><%= game.role %>
      </p>
    </footer>
    <% end %>
</div>
</div>